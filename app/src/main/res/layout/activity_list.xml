<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list"
    tools:context="com.example.ico.iotumbrella_friendly.ListActivity">

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imgbtn_main_map"
        android:background="@mipmap/a_btn_map"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imgbtn_main_bluetooth"
        android:background="@mipmap/a_btn_bluetooth"
        android:layout_above="@id/imgbtn_main_map"
        android:layout_marginBottom="100px"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imgbtn_main_favori"
        android:background="@mipmap/a_btn_favorite"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgbtn_main_map"
        android:layout_marginTop="100px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seungcheol Lee. Daun Joung. Yeonju Hwang."
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tvName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015년 2학기 컴퓨터종합설계 Team 7(Friendly)"
        android:layout_above="@id/tvName"
        android:id="@+id/tvTitle" />
</RelativeLayout>
